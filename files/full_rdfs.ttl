@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#>.
@prefix cs: <http://www.Computer-Specs.com/schemas/computers> .
@prefix ex: <http://example.com/> .
@prefix exterms: <http://example.com/> .

#@prefix foaf: <http://xmlns.com/foaf/0.1/> .
#@prefix rel: <http://www.perceive.net/schemas/relationship/> .

# Class definitions:
# The rdfs:subClassOf property is transitive. This means, for example, that given the RDF statements:
# https://www.w3.org/2007/02/turtle/primer/
cs:Computer  rdf:type         rdfs:Class .
cs:Laptop    rdf:type         rdfs:Class .
cs:Pc        rdf:type         rdfs:Class .

ex:Cuboid    rdf:type         rdfs:Class .
ex:Psu       rdf:type         rdfs:Class .
ex:Case      rdf:type         rdfs:Class .

cs:Laptop    rdfs:subClassOf  cs:Computer .
cs:Pc        rdfs:subClassOf  cs:Computer .

ex:Psu       rdfs:subClassOf  ex:Cuboid .
ex:Case      rdfs:subClassOf  ex:Cuboid .


# PROPERTIES:
exterms:weightInKg rdf:type rdf:Property .
exterms:priceInEur rdf:type rdf:Property .
# Case ?
exterms:heightInCm rdf:type rdf:Property .
exterms:widthInCm rdf:type rdf:Property .
exterms:depthInCm rdf:type rdf:Property .

# PSU ?
exterms:watts rdf:type rdf:Property .
exterms:isModular "true"^^xsd:boolean . ??????????????
exterms:efficiencyCertification rdf:type rdf:Property .

xsd:integer a rdfs:Datatype.
xsd:decimal a rdfs:Datatype.
xsd:boolean a rdfs:Datatype.


exterms:weightInKg rdfs:domain ex:Psu .
exterms:weightInKg rdfs:domain ex:Case .


ex:Cuboid
  exterms:heightInCm xsd:integer ;
  exterms:widthInCm xsd:integer ;
  exterms:depthInCm xsd:integer .

# Applying properties to classes
#ex:Case      rdfs:domain     ex:Cuboid .
#ex:Psu       rdfs:domain     ex:Cuboid .

exterms:weightInKg rdfs:domain ex:Psu .
exterms:weightInKg rdfs:domain ex:Case .


ex:hasDimensions a rdfs:Property; rdfs:domain ex:Case; rdfs:range ex:Cuboid .
ex:hasHeight a rdfs:Property; rdfs:domain ex:Cuboid; rdfs:range exterms:heightInCm .

ex:Case
  rdf:type rdf:Property ;
  rdfs:label "Computer part"@en-US ;
  exterms:isModular "true"^^xsd:boolean ;
  ex:hasDimensions "200";
  ex:hasHeight "100".





# Määrittely alkaa käymään nopeasti puuduttavaksi.
# Siksi on selvää, että kerran tehtyjä määrityksiä pyritään hyödyntämään uudestaan.
# Kaikkea ei tarvitse tehdä itse alusta loppuun, vaan esim. internetistä voi hakea (Onki ja se toinen sivu)
# omaan tarkoitukseen sopivia ontologioita.

<cs:Computer>
    a foaf:Person ;    # in the context of the Marvel universe
    foaf:name "Green Goblin" .

<cs:laptop>
    rel:subClassOf <cs:computer> ;
    a foaf:Person ;
    foaf:name "Spiderman", "Человек-паук"@ru .
